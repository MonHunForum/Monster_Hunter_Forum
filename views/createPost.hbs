<!Doctype html>
<html>
    <head>
        <title>Create Post</title>
        <link rel="icon" href="/img/Monster_Hunter_Logo.png">
        <link href='css/threadSelectStyle.css' rel='stylesheet' type='text/css' />
        <link href="https://fonts.googleapis.com/css?family=Cinzel+Decorative" rel="stylesheet">
    </head>

    <body>
         {{> quick_tab}}
        
        <div id='bodybg'></div>

        <div id='bodyWrapper'>
            {{> (getBanner)}}

            <div id='discussSelect'>
               <div id='monhun' class='topic'>

                   <div class='topicTitle'>
                       <b>Create New Post</b>
                   </div>

                   <form class="textContainer" action='/newPostResult' method='POST'>
                       <textarea style="display: none" name="link">{{link}}</textarea> 
                       <br>
                       <textarea class="Text" id='topPost' required="required" name='topContent' rows="6" cols="100" maxlength="600" placeholder="Content"></textarea>

                       <br>
                       {{!-- <input id="thread_submit" type="submit"> --}}
                        <button id="thread_submit" type="submit" name='currentUser' value=''>Confirm</button>
                   </form>
                </div>
            </div>

        </div>
        <script src='js/index.js'></script>
        <script src='js/app.js'></script>
        <script>
            currentUser = document.getElementById('thread_submit')
            for (var key in localStorage) {
                if ((key != 'length')&&( key != 'key') && (key != 'getItem') && (key != 'setItem') && (key != 'clear') && (key != 'removeItem')) {
                    currentUser.value = key
                    document.getElementById('welcomeMsg').innerHTML = `Welcome Back ${key}`
                }
            }

        </script>

    </body>
</html>
