<div class='Thread'>
    <div class='titleContainer'>
        <span id='threadName' class='threadInfo'><b><a class="threadTitle" href="/{{topic_link}}">{{title}}</a></b></span>
   </div>

   <div class='threadContainer'>
        <span id='firstAuthor' class='threadInfo'>{{started_by}}</span>
        <span id='firstDate' class='threadInfo'>{{post_date}}</span>
   </div>

   <div class='recentContainer'>
       <span id='recentAuthor' class='recentInfo'>{{last_poster}}</span>
       <span id='recentTime' class='recentInfo'>{{last_post_date}}</span>
   </div>

   <div class='countContainer'>
       <span id='replyCount' class='statsInfo'>Replies: {{replies}}</span>
       <span id='viewCount' class='statsInfo'>Views: {{views}}</span>
   </div>

</div>
